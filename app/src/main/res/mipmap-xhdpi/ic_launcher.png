public class DetailPinjamActivity extends AppCompatActivity implements SwipeRefreshLayout.OnRefreshListener {

  private String idPinjam, username;
  private RequestQueue requestQueue;
  private SharedPrefManager sharedPrefManager;
  private ImageView ivCoverBuku;
  private Button btnBatal;
  private TextView tvKode, tvJudul, tvPenyusun, tvTahun, tvStatus, tvTglPinjam, tvTglKembali;
  private SwipeRefreshLayout swipeRefreshLayout;

  private void getData() {

    String url = "https://papsi.its.ac.id/sipus/pages/webservice/ambil_detail_pinjam.php?id=" + idPinjam;
    StringRequest request = new StringRequest(Request.Method.GET, url, new Response.Listener<String>() {
      @Override
      public void onResponse(String response) {
        try {
          JSONObject jsonObject = new JSONObject(response);
          JSONArray jsonArray = new JSONArray(jsonObject.getString("data"));
          JSONObject jsonResponse = jsonArray.getJSONObject(0);
          String id = jsonResponse.getString("id");
          String kode = jsonResponse.getString("kode_buku");
          String judul = jsonResponse.getString("judul_buku");
          String penyusun = jsonResponse.getString("penyusun");
          String tahun = jsonResponse.getString("tahun");
          String status = jsonResponse.getString("status");
          String cover = jsonResponse.getString("cover");
          String tglPinjam = jsonResponse.getString("tgl_pinjam");
          String tglKembali = "-";

          if (status.equals("Proses")) {
            btnBatal.setEnabled(true);
            btnBatal.setVisibility(View.VISIBLE);
            tvStatus.setTextColor(getResources().getColor(R.color.colorStatusProses));
          } else if (status.equals("Dikembalikan")){
            tglKembali = jsonResponse.getString("tgl_kembali");
            btnBatal.setVisibility(View.GONE);
            tvStatus.setTextColor(getResources().getColor(R.color.colorStatusValid));
          } else {
            btnBatal.setVisibility(View.GONE);
            tvStatus.setTextColor(getResources().getColor(R.color.colorStatus));
          }
          setTitle(judul);
          tvKode.setText(kode);
          tvJudul.setText(judul);
          tvPenyusun.setText(penyusun);
          tvTahun.setText(tahun);
          tvStatus.setText(status);
          tvTglPinjam.setText(tglPinjam);
          tvTglKembali.setText(tglKembali);


          if (!cover.trim().isEmpty()) {
            Picasso.get().load("https://papsi.its.ac.id/sipus/img/cover/" + cover).into(ivCoverBuku);
          } else {
            Picasso.get().load(R.drawable.no_image).into(ivCoverBuku);
          }
        } catch (JSONException e) {
          Toast.makeText(DetailPinjamActivity.this, e.getLocalizedMessage(), Toast.LENGTH_SHORT).show();
        }
      }
    }, new Response.ErrorListener() {
      @Override
      public void onErrorResponse(VolleyError error) {
        Toast.makeText(DetailPinjamActivity.this, error.getLocalizedMessage(), Toast.LENGTH_SHORT).show();
      }
    });
    requestQueue.add(request);
  }

